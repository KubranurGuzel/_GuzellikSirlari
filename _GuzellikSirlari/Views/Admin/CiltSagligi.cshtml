@model IEnumerable<_GuzellikSirlari.Models.CiltSagligi>
@{
    ViewBag.Title = "CiltSagligi";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

@using Microsoft.AspNet.Identity
@if (Session["KullaniciId"] != null)
{
    <div id="about1" class="tm-content-box">
        <div class="tm-box-pad tm-bordered-box">
            <h2>Cilt Sağlığı</h2>

            <p>
                @Html.ActionLink("Yeni Ekle", "CiltSagligiEkle")
            </p>
            <table class="table">
                <tr>
                    <th>
                        Cilt Sağlığı Adı
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CiltSagligiAdi)
                        </td>

                        <td>
                            @Html.ActionLink("Detaylar", "CiltSagligiDetaylar", new { CiltSagligiId = item.CiltSagligiId }) |
                            @Html.ActionLink("Sil", "CiltSagligiSil", new { CiltSagligiId = item.CiltSagligiId })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
}
