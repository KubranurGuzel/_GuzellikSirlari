@model _GuzellikSirlari.Models.CiltBakimi

@{
    ViewBag.Title = "CiltBakimiSil";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
@using Microsoft.AspNet.Identity
@if (Session["KullaniciId"] != null)
{
    <div id="about1" class="tm-content-box">
        <div class="tm-box-pad tm-bordered-box">
        
            <h4>Cilt Bakımı</h4>
            <h3>Silmek istediğine emin misin?</h3>
            <div>
               
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                      Cilt Bakımı Adı
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CiltBakimiAdi)
                    </dd>

                    <dt>
                      Cilt Bakımı Açıklama
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.CiltBakimiAciklama)
                    </dd>

                </dl>

