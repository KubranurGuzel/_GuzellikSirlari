@model _GuzellikSirlari.Models.Iletisim
@{
    ViewBag.Title = "IletisimSil";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
@using Microsoft.AspNet.Identity
@if (Session["KullaniciId"] != null)
{
    <div id="about1" class="tm-content-box">
        <div class="tm-box-pad tm-bordered-box">

            <h4>İletişim</h4>
            <h3>Silmek istediğine emin misin?</h3>
            <div>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                         Adı
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Adi)
                    </dd>

                    <dt>
                        Mail Adresi
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>

                    <dt>
                        Açıklaması
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Aciklama)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Sil" class="btn btn-default" /> |
                    </div>
                }
            </div>
        </div>
    </div>
}
