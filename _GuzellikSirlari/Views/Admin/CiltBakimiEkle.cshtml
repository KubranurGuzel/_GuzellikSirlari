@model _GuzellikSirlari.Models.CiltBakimi

@{
    ViewBag.Title = "CiltBakimiEkle";
    Layout = "~/Views/Shared/_Layout3.cshtml";
}

@using Microsoft.AspNet.Identity
@if (Session["KullaniciId"] != null)
{

    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div id="about1" class="tm-content-box">
            <div class="tm-box-pad tm-bordered-box">
      
                <div class="form-horizontal">
                    <h4>Cilt Bakımı</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <p style="float:left"> &nbsp&nbsp&nbsp&nbsp Cilt Bakımı Adı</p><br />
                        <div class="col-md-10">
                            <input type="text" id="contact_name" name="CiltBakimiAdi" class="form-control" placeholder="Adınız" required />
                            <br />
                        </div>
                    </div>

                    <div class="form-group">
                        <br />  <p style="float:left"> &nbsp&nbsp&nbsp&nbsp Cilt Bakımı Açıklama</p><br />
                        <div class="col-md-10">
                            <input type="text" id="contact_name" name="CiltBakimiAciklama" class="form-control" placeholder="Açıklama" required /><br />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Ekle" class="btn btn-default" />
                        </div>
                    </div>
                </div>
                <br /> <br /><br /><br /><br /><br />
            </div>
        </div>
    }
}