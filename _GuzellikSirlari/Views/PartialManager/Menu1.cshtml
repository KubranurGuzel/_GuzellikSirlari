@model List<_GuzellikSirlari.Models.CiltBakimi>
@{
    Layout = null;
}
 <!--1.menü-->
<div class="tm-content-box tm-content-box-home">
    <img src="~/Content/img/336561.jpg" alt="Image 1" class="img-fluid tm-welcome-img">
    <div class="tm-welcome-boxes-container">
        <div class="tm-welcome-box">
            <div class="tm-welcome-text">
                <h2 class="tm-section-title">Cilt Bakımı Nedir?</h2>
                <p>Cildi iyileştirmek için düzenli olarak uygulanan bakımların tümüdür. </p>
            </div>
            <a class="tm-welcome-link tm-button">Cilt Bakımı </a>
        </div>
        <div class="tm-welcome-box">
            <div class="tm-welcome-text">
                <h2 class="tm-section-title">Cilt Bakımı Gerekli Mi?</h2>
                <p>Parlak ve pürüzsüz bir görünüm, doğru cilt bakımı ile başlar.</p>
            </div>
            <a class="tm-welcome-link tm-button">Cilt Bakımı</a>
        </div>

    </div>
</div>

