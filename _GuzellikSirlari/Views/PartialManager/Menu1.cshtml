        <figure class="effect-bubba">
            <img src="~/Content/img/cilt_bakimi3.jpg" alt="Image 5" class="img-fluid">
            <figcaption>
                <h2>Cİlt<br /><span>Bakımı</span></h2>
         
                <a href="~/Content/img/cilt_bakimi3.jpg">View more</a>
            </figcaption>
        </figure>

      
    </div>
</div>

<div id="services2" class="tm-content-box tm-gray-bg tm-services">

    <div class="tm-services-img-container">
        <img src="~/Content/img/cilt_bakimidik.jpg" alt="Green Field" class="img-fluid tm-services-img">
    </div>

    <div class="tm-box-pad tm-services-description-container">
        <h2 class="tm-section-title"><span class="tm-blue-text">Cilt Bakımı</span> </h2>
@foreach (var item in Model)
{
        <p class="tm-section-description">@Html.ActionLink(@item.CiltBakimiAdi, "DetaySayfasiMenu1", new { CiltBakimiId = item.CiltBakimiId }) </p>
}
    </div>

